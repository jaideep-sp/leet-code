class Solution {
public:
    int balancedStringSplit(string s) {
        int si=s.size();
        int a(0),c(0);
        for(int i=0; i<si; i++){
            if(s[i]=='L')c++; 
            if(s[i]=='R')c--;      
            if(c==0)a++;
        }
        return a;
    }
};

