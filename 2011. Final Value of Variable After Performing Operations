class Solution {
public:
    int finalValueAfterOperations(vector<string>& operations) {
        int s=operations.size();
        int val(0);
        for(int i=0; i<s; i++){
          if(operations[i]=="X--"){
              val--;
          }
           if(operations[i]=="X++"){
              val++;
          }  
           if(operations[i]=="--X"){
              --val;
          }  
           if(operations[i]=="++X"){
              ++val;
          }  
        }    
        return val;
    }
};

/*
Runtime: 4 ms, faster than 95.13% of C++ online submissions for Final Value of Variable After Performing Operations.
Memory Usage: 14.1 MB, less than 57.26% of C++ online submissions for Final Value of Variable After Performing Operations.
*/
